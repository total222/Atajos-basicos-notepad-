; No tocar linea 1-9
#SingleInstance Force
#Warn
#NoEnv
msgbox atajos activados


!*::suspend
#IfWinActive, ahk_exe notepad++.exe

;Aqui la definicion de los simbolos

^ = ctrl
! = alt
+ = shift

; ATAJOS DE NOTEPAD++
; NOTA: Puedes cambiar las letras de cada atajo, solo las que no llevan los simbolos (linea 13, 14 y 15)
c::^c ;COPIAR
x::^x ;CORTAR
z::^z ;DESHACER
y::^y ;REHACER
v::^v ;PEGAR
f::^f ;LANZAR DIALOGO DE BUSQUEDA
a::^a ;SELECCIONAR TODO
h::^h ;LANZAR DIALOGO DE BUSQUEDA
d::^d ;DUPLICAR LINEA ACTUAL
l::^l ;BORRAR LINEA ACTUAL
t::^t ;CAMBIAR LA POSICION DE LA LINEA ACTUAL CON LA DE LA LINEA PREVIA
3::+F3 ;BUSCAR SIGUENTE
e::+F3 ;BUSCAR ANTERIOR
s::^s  ;GUARDAR ARCHIVO
!s::^!s ;GUARDAR COMO
o::^o ;ABRIR ARCHIVO
n::^n ;NUEVO ARCHIVO
2::F2 ;SIGUENTE MARCADOR
g::^g ;LANZAR EL DIALOGO IR A LINEA
w::^w ;CERRAR DOCUMENTO ACTUAL
+::^+ ;AUMENTAR ZOOM
-::^- ;DISMINUIR ZOOM
q::^+q ;COMENTARIO DE FLUJO

p::^p
4::!F4
i::^i
j::^j
0::F1	


